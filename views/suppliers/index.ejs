<%- include('../partials/header') %>

<div class="container">
    <h2>Suppliers</h2>
    <a href="/suppliers/new" class="btn">➕ Add Supplier</a>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Phone</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% suppliers.forEach(s => { %>
            <tr>
                <td><%= s.name || "N/A" %></td>
                <td><%= s.address || "N/A" %></td>
                <td><%= s.phone || "N/A" %></td>
                <td class="actions">
                    <a href="/suppliers/<%= s._id %>/edit" class="btn small">✏️
                        Edit</a>
                    <a href="/suppliers/<%= s._id %>/delete"
                        class="btn small danger">🗑️ Delete</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</div>

<%- include('../partials/footer') %>
